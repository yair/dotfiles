[global]
    # Position: top-right corner, small offset
    origin = top-right
    offset = 10x10

    # Size: compact for hovering/minimalism
    width = 300
    height = 100
    origin_offset = 10x10

    # Minimal appearance: no frame, transparent
    frame_width = 0
    frame_color = "#00000000"
    font = Monospace 10
    line_height = 0
    gap_size = 5

    # Transparency and fade
    transparency = 10
    idle_threshold = 5
    monitor = 0  # Focused monitor

    # Behavior
    ignore_newline = yes
    stack_duplicates = true
    show_age_threshold = 60
    history_length = 20
    word_wrap = yes
    ellipsize = middle

    # Format: bold summary + body
    format = "<b>%s</b>\n%b"

    # Follow keyboard focus (xmonad-friendly)
    follow = keyboard

    # Icons: minimal, optional path
    icon_position = left
    max_icon_size = 32
    icon_path = /usr/share/icons/hicolor/32x32/apps/

[urgency_low]
    background = "#222222AA"
    foreground = "#CCCCCC"
    timeout = 4

[urgency_normal]
    background = "#285577AA"
    foreground = "#FFFFFF"
    timeout = 10

[urgency_critical]
    background = "#900000AA"
    foreground = "#FFFFFF"
    frame_color = "#FF0000AA"
    timeout = 0  # Persistent until dismissed

# Rule example: Pin xmonad notifications always-visible
[xmonad]
    appname = xmonad
    set_transient = yes
    timeout = 5

